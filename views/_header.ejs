<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>ExpressAuth</title>

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
  <!--link rel="stylesheet" href="/stylesheets/style.css"-->
</head>

<body>

  <nav class="navbar navbar-expand-sm navbar-dark bg-dark">

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarMenu" aria-controls="navbarTogglerDemo01"
      aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarMenu">
      <a class="navbar-brand" href="#">Express Auth</a>
      <ul class="navbar-nav ml-auto">

      <% if (currentUser) { %>
      <li class="nav-item">
        <a class="nav-link" href="/edit">Hello,
          <%= currentUser.name() %></a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="/logout">Log out</a>
      </li>
      <% } else { %>

      <li class="nav-item">
        <a class="nav-link" href="/">Log in</a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="/signup">Sign up</a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="/frontpage">Frontpage</a>
      </li>

      <% } %>
      </ul>
    </div>
  </nav>

  <div class="container">

    <% errors.forEach(function(error) { %>
    <div class="alert alert-danger" role="alert">
      <%= error %>
    </div>
    <% }) %>

    <% infos.forEach(function(info) { %>
    <div class="alert alert-info" role="alert">
      <%= info %>
    </div>
    <% }) %>