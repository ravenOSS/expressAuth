<% include _header %>
<div class="container">

  <h2>Sign up</h2>

  <form action="/signup" method="post">
    <div class="form-group">
      <label for="username">User Name</label>
      <div class="col-sm-6">
        <input type="text" class="form-control" name="username" placeholder="Create username" required autofocus="required"/>
      </div>
    </div>

    <div class="form-group">

      <label for="password">Password</label>
      <div class="col-sm-6">
        <input type="text" class="form-control" name="password" placeholder="Password" required />
      </div>
    </div>

    <div class="form-group">
      <label for="fname">First Name</label>
      <div class="col-sm-6">
        <input type="text" class="form-control" name="fname" placeholder="Enter First Name">
      </div>
    </div>

    <div class="form-group">
      <label for="lname">Last Name</label>
      <div class="col-sm-6">
        <input type="text" class="form-control" name="lname" aria-describedby="userHelp" placeholder="Enter Last Name">
      </div>
    </div>

    <div class="form-group">
      <label for="email">Email Address</label>
      <div class="col-sm-6">
        <input type="text" class="form-control" name="email" aria-describedby="userHelp" placeholder="Enter email address">
      </div>
    </div>

    <div class="form-group">
      <label for="telephone">Mobile Number</label>
      <div class="col-sm-6">
        <input type="text" class="form-control" name="telephone" aria-describedby="userHelp" placeholder="Enter Mobile Phone Number">
      </div>
    </div>



    <button type="submit" value="Signup" class="btn btn-primary">Signup</button>

  </form>
</div>

<% include _footer %>